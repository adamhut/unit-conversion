{
    "name": "adamhut/unit-conversion",
    "description": "Perform unit conversion in PHP",
    "keywords": [
        "adamhut",
        "unit-conversion"
    ],
    "homepage": "https://github.com/spatie/unit-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Huang",
            "email": "adamhut@gmail.com",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Adamhut\\UnitConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adamhut\\UnitConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
